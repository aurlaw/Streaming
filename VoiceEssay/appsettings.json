{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=voiceessay;Username=essayuser;Password=essaypass"
  },
  "VoiceToEssay": {
    "StoragePath": "app-data/voice-memos",
    "JobExpirationHours": 24,
    "CleanupIntervalMinutes": 60,
    "MaxFileSizeMB": 25
  },
  "Anthropic": {
    "Model": "claude-sonnet-4-20250514",
    "MaxTokens": 8000
  },
  "OpenAI": {
    "EmbeddingModel": "text-embedding-3-small",
    "EmbeddingDimensions": 1536,
    "MaxTokens": 4096,
    "Temperature": 0.7
  },
  "PromptService": {
    "EnableCaching": true,
    "CacheExpirationHours": 24
  }
}
